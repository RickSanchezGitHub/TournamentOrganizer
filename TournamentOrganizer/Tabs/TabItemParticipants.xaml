<TabItem x:Class="TournamentOrganizer.UI.Tabs.TabItemParticipants"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          xmlns:m="clr-namespace:TournamentOrganizer.UI.VeiwModels"
         xmlns:c="clr-namespace:TournamentOrganizer.BusinessLayer.Models;assembly=TournamentOrganizer.BusinessLayer"
         Header="Команды">

    <TabItem.DataContext>
        <m:TeamViewModel></m:TeamViewModel>
    </TabItem.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"
                              MinWidth="200"/>
            <ColumnDefinition Width="2*" 
                              MinWidth="200"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Image x:Name="MainImage"
                           Grid.Column="0" 
                           Grid.Row="0" 
                           Grid.ColumnSpan="2"
                           Grid.RowSpan="2"
                           Source="..\Images\carbon.jpg" 
                           Stretch="UniformToFill" 
                           Panel.ZIndex="0"/>
        <GroupBox Grid.Column="0"
                  Grid.Row="0"
                  Header="Команды" 
                  Width="200"
                  Margin="10"
                  Foreground="White">
            <DockPanel Margin="5">
                <ListBox ItemsSource="{Binding Teams}" 
                         SelectedItem="{Binding SelectedTeam}" 
                         SelectedIndex="0">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="HorizontalContentAlignment" 
                                    Value="Stretch"/>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate  DataType="c:TeamModel">
                            <DockPanel>
                                <TextBlock DockPanel.Dock="Left"
                                           Text="{Binding Id}"
                                           Width="30"/>
                                <TextBlock Text="{Binding Name}" Width="100"/>
                            </DockPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </GroupBox>
        <GroupBox Grid.Column="1" 
                  Grid.Row="0"                
                  MinWidth="200"
                  MaxWidth="450"
                  Margin="10"
                  Foreground="White"
                  Header="{Binding SelectedTeam.Name,
                    StringFormat='Игроки команды {0}', 
                    FallbackValue='Игроки', 
                    TargetNullValue='Команда не выбрана'}">
            
            <DataGrid ItemsSource="{Binding SelectedTeam.Players}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True">
                
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" 
                                        Binding="{Binding Id}"/>
                    <DataGridTextColumn Header="Имя" 
                                        Binding="{Binding FirstName}"/>
                    <DataGridTextColumn Header="Фамилия" 
                                        Binding="{Binding LastName}"/>
                    <DataGridTextColumn Header="Ник" 
                                        Binding="{Binding NickName}"/>
                    <DataGridTextColumn Header="Email" 
                                        Binding="{Binding Email}"/>
                    <DataGridTextColumn Header="Дата рождения" 
                                        Binding="{Binding Birthday, StringFormat=dd.mm.yyyy}"/>
                </DataGrid.Columns>                
            </DataGrid>
        </GroupBox>
    </Grid>
</TabItem>
