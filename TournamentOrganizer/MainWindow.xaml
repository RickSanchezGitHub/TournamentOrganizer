<Window x:Class="TournamentOrganizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tabData ="clr-namespace:TournamentOrganizer.UI.Tabs"
        mc:Ignorable="d"
        Title="Организатор турниров" Height="450" Width="800">
    <Grid>
        <UniformGrid Columns="4" Margin="3, 0, 3, 0">
            <FrameworkElement x:Name="c1"/>
        </UniformGrid>
        
        <TabControl x:Name="MainTabControl" >
            <tabData:TabItemStart Width="{Binding ElementName=c1, Path=(FrameworkElement.ActualWidth)}"></tabData:TabItemStart >
            <tabData:TabItemParticipants Width="{Binding ElementName=c1, Path=(FrameworkElement.ActualWidth)}"></tabData:TabItemParticipants>
            <tabData:TabItemGame Width="{Binding ElementName=c1, Path=(FrameworkElement.ActualWidth)}"></tabData:TabItemGame>
            <tabData:TabItemPlayer Width="{Binding ElementName=c1, Path=(FrameworkElement.ActualWidth)}"></tabData:TabItemPlayer>
            
        </TabControl>
    </Grid>
</Window>
